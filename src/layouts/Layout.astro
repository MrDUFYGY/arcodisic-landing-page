  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-2FTR17WKCF');
</script> -->
    <!-- <script async src="https://www.googletagmanager.com/gtag/js?id=G-2FTR17WKCF"></script>
  <script type="text/javascript" is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-2FTR17WKCF');
  </script> -->

    <!-- Uncomment line below to activate View Transitions -->
    <!-- <ViewTransitions fallback="swap" /> -->
  </head>

  <body class="bg-[#D9D9D9] dark:bg-[#222242]">
    
    <Contacto />
		<Nav />

    <slot />
    <Footer />
    <BasicScripts />

    <script>
      if ('startViewTransition' in document) {
        document.addEventListener('click', (e) => {
          const target = e.target;
          if (!target) return;
          const a = (target instanceof Element) ? target.closest('a[view-transition]') : null;
          if (a && a instanceof HTMLAnchorElement && a.href && a.origin === location.origin) {
            e.preventDefault();
            document.startViewTransition(() => {
              window.location.assign(a.href);
            });
          }
        });
      }
    </script>

    <!-- Netlify Identity: solo detectar tokens y redirigir -->
    <script>
      (function () {
        // Detectar tokens de invitación/recuperación en la URL
        const hasIdentityToken = /(?:invite_token|confirmation_token|recovery_token)=/.test(location.hash);
        
        // Si hay un token y no estamos ya en setup-password, redirigir
        if (hasIdentityToken && !location.pathname.includes('/admin/setup-password')) {
          window.location.replace('/admin/setup-password' + location.hash);
        }
      })();
    </script>

    <style is:global>
    
    </style>
  </body>
</html>
