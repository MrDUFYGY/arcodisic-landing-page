---
// Página de administración - Redirige al CMS
// En producción usa Netlify Identity, en desarrollo usa Supabase (opcional)
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex" />
    <title>Redirigiendo al CMS...</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .loading-container {
        background: white;
        border-radius: 16px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        padding: 48px;
        text-align: center;
        max-width: 400px;
      }
      .spinner {
        border: 4px solid #f3f3f3;
        border-top: 4px solid #667eea;
        border-radius: 50%;
        width: 60px;
        height: 60px;
        animation: spin 1s linear infinite;
        margin: 0 auto 24px;
      }
      @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
      }
      h1 {
        color: #333;
        font-size: 24px;
        margin-bottom: 12px;
      }
      p {
        color: #666;
        font-size: 14px;
      }
    </style>
  </head>
  <body>
    <div class="loading-container">
      <div class="spinner"></div>
      <h1>Redirigiendo al CMS...</h1>
      <p>Por favor espera un momento.</p>
    </div>

    <script>
      // Detectar si estamos en desarrollo o producción
      const isLocalhost = window.location.hostname === 'localhost' || 
                         window.location.hostname === '127.0.0.1';

      if (isLocalhost) {
        // En desarrollo: verificar autenticación con Supabase (opcional)
        import('../lib/supabase').then(({ isAuthenticated }) => {
          isAuthenticated().then(authenticated => {
            if (authenticated) {
              // Usuario autenticado con Supabase, mostrar CMS
              window.location.href = '/admin/index.html';
            } else {
              // No autenticado, redirigir al login de Supabase
              window.location.href = '/admin/login';
            }
          }).catch(() => {
            // Error o sin Supabase, ir directo al CMS (modo local)
            window.location.href = '/admin/index.html';
          });
        }).catch(() => {
          // Si no puede cargar Supabase, ir directo al CMS
          window.location.href = '/admin/index.html';
        });
      } else {
        // En producción: redirigir directamente al CMS
        // Netlify Identity se encargará de la autenticación
        window.location.href = '/admin/index.html';
      }
    </script>
  </body>
</html>
