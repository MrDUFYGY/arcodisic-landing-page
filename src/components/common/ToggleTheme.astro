---
import { Icon } from 'astro-icon/components';

import { UI } from '~/utils/config';

export interface Props {
  label?: string;
  class?: string;
  iconClass?: string;
  iconName?: string;
}

const {
  label = 'Toggle between Dark and Light mode',
  class:
    className = ' text-gray-50 dark:text-gray-100 bg-blue-800 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none ring-2 ring-gray-100 focus:ring-4 focus:ring-gray-200 focus:bg-slate-400 hover:text-black focus:text-black dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center',
  iconClass = 'w-6 h-6',
  iconName = 'tabler:sun',
} = Astro.props;
---

{
  !(UI.theme && UI.theme.endsWith(':only')) && (
    <button type="button" class={className} aria-label={label} data-aw-toggle-color-scheme>
      <Icon name={iconName} class={iconClass} /> Modo oscuro
    </button>
  )
}
